#:kivy 1.11.1

#:import constants constants

<PrayerOptions>:
	size_hint: 0.8, 0.6
	title: "Prayer Options"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		padding: dp(5)
		PrayerOptionsButton:
			text: "Group"
			background_color: constants.SECONDRY_COLOR
		PrayerOptionsButton:
			text: "Alone"
			background_color: constants.TERNARY_COLOR
		PrayerOptionsButton:
			text: "Delayed"
			background_color: constants.CAUTION_COLOR
		PrayerOptionsButton:
			text: "Not prayed"
			background_color: constants.WARNING_COLOR

<RecordLists>:
	orientation: "vertical"
	salah_record_list: salah_record_list
	extra_record_list: extra_record_list
	CustomRecycleView:
		id: salah_record_list
		viewclass: "SalahButton"
		size_hint_y: 0.65
		VerticalListLayout:
	CustomRecycleView:
		id: extra_record_list
		viewclass: "LabelCheckBox"
		size_hint_y: 0.35
		VerticalListLayout:

