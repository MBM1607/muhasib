#:kivy 1.11.1

#:import constants constants

<PrayerOptions>:
	size_hint: 0.8, 0.5
	options_list: options_list
	BoxLayout:
		orientation: "vertical"
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Prayer Options"
				font_size: sp(15)
		CustomRecycleView:
			id: options_list
			viewclass: "PrayerOptionsButton"
			VerticalListLayout:

<RecordLists>:
	orientation: "vertical"
	salah_record_list: salah_record_list
	extra_record_list: extra_record_list
	CustomRecycleView:
		id: salah_record_list
		viewclass: "SalahButton"
		size_hint_y: 0.65
		VerticalListLayout:
	CustomRecycleView:
		id: extra_record_list
		viewclass: "LabelCheckBox"
		size_hint_y: 0.35
		VerticalListLayout:

