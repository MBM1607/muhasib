#:kivy 1.11.1

#:import constants constants

<PrayerOptions>:
	size_hint: 0.8, 0.6
	title: "Prayer Options"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		padding: dp(5)
		PrayerOptionsButton:
			text: "Group"
			background_color: constants.SECONDRY_COLOR
		PrayerOptionsButton:
			text: "Alone"
			background_color: constants.TERNARY_COLOR
		PrayerOptionsButton:
			text: "Delayed"
			background_color: constants.CAUTION_COLOR
		PrayerOptionsButton:
			text: "Not prayed"
			background_color: constants.WARNING_COLOR

