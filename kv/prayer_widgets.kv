#:kivy 1.11.1

#:import constants constants

<PrayerOptions>:
	size_hint: 0.8, 0.5
	options_list: options_list
	CustomRecycleView:
		id: options_list
		viewclass: "PrayerOptionsButton"
		VerticalListLayout:

<RecordLists>:
	layout: layout
	scroll_type: ["content", "bars"]
	bar_color: 0, 0, 0, 1
	BoxLayout:
		id: layout 
		orientation: "vertical"
		size_hint_y: None
		spacing: dp(10)
		padding: dp(10)
		height: (self.padding[0] * 2) + (len(self.children) * dp(48)) + (self.spacing * (len(self.children) - 1))
