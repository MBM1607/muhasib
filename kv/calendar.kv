<TopButton@CustomButton>:
	background_color: SECONDRY_COLOR

<Calendar>:
	dates: dates
	days: days
	month_menu: month_menu

	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)

		CustomActionBar:
			CustomButton:
				size_hint: None, 1
				on_press: root.dismiss()
				canvas:
					Rectangle:
						source: "data/back.png"
						pos: self.pos
						size: dp(32), dp(32)
				size: dp(32), dp(32)
			CustomLabel:
				text: "Calendar"

		BoxLayout:
			orientation: "vertical"

			BoxLayout:
				orientation: "horizontal"
				size_hint_y: 0.1
				spacing: dp(10)
				CustomButton:
					text: "<"
					on_press: root.previous_month()
					size_hint_x: 0.1
				BoxLayout:
					orientation: "horizontal"
					size_hint_x: 0.4
					BlackLabel:
						text: root.year_menu
						size_hint_x: 0.8
					BoxLayout:
						orientation: "vertical"
						size_hint_x: 0.2
						spacing: dp(5)
						CustomButton:
							text: "+"
							on_press: root.next_year()
							size_hint_x: 0.8
							pos_hint: {"center_x": 0.5}
						CustomButton:
							text: "-"
							on_press: root.previous_year()
							size_hint_x: 0.8
							pos_hint: {"center_x": 0.5}
				CustomButton:
					id: month_menu
					size_hint_x: 0.4
				CustomButton:
					text: ">"
					on_press: root.next_month()
					size_hint_x: 0.1
			Days:
				id: days
				size_hint_y: 0.1
			Dates:
				id: dates
				size_hint_y: 0.7
			BoxLayout:
				padding: dp(5), 0, dp(5), dp(5)
				spacing: dp(5)
				orientation: "horizontal"
				size_hint_y: 0.1
				CustomButton:
					text: "To Hijri"
					on_press: root.convert_to_islamic()
				CustomButton:
					text: "To Gregorian"
					on_press: root.convert_to_gregorian()
<Days>:
	orientation: "horizontal"
	BlackLabel:
		text: root.weekdays[0]
	BlackLabel:
		text: root.weekdays[1]
	BlackLabel:
		text: root.weekdays[2]
	BlackLabel:
		text: root.weekdays[3]
	BlackLabel:
		text: root.weekdays[4]
	BlackLabel:
		text: root.weekdays[5]
	BlackLabel:
		text: root.weekdays[6]

<Dates>:
	cols: 7
	spacing: dp(5)
	padding: dp(5)
