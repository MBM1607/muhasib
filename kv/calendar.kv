#:kivy 1.11.1

#:import SECONDRY_COLOR constants.SECONDRY_COLOR

<DatePopup>:
	salah_list: salah_list
	extra_record_list: extra_record_list
	title: "Day Records"
	size_hint: 0.9, 0.9
	BoxLayout:
		orientation: "vertical"
		ItemsList:
			id: salah_list
			viewclass: "SalahButton"
			size_hint_y: 0.65
		ItemsList:
			id: extra_record_list
			viewclass: "LabelCheckBox"
			size_hint_y: 0.35

