#:kivy 1.11.1

#:import ItemsList custom_widgets.ItemsList
#:import SalahButton prayer_widgets.SalahButton
#:import MAIN_COLOR constants.MAIN_COLOR

<Dashboard>:
	orientation: "vertical"
	spacing: dp(10)
	salah_list: salah_list

	canvas.before:
		Color:
			rgba: 240/255, 240/255, 240/255, 1
		Rectangle:
			pos: self.pos
			size: self.size

	CustomActionBar:
		spacing: dp(16)
		Widget:
		CustomButton:
			size_hint: None, 1
			on_press: app.open_settings()
			canvas:
        		Rectangle:
					source: "data/settings.png"
					pos: self.pos
					size: dp(32), dp(32)
			size: dp(32), dp(32)

		CustomButton:
			size_hint: None, 1
			on_press: app.open_prayer_times_screen()
			canvas:
        		Rectangle:
					source: "data/time.png"
					pos: self.pos
					size: dp(32), dp(32)
			size: dp(32), dp(32)

		CustomButton:
			size_hint: None, 1
			on_press: app.open_compass()
			canvas:
        		Rectangle:
					source: "data/compass.png"
					pos: self.pos
					size: dp(32), dp(32)
			size: dp(32), dp(32)

		CustomButton:
			size_hint: None, 1
			on_press: app.open_calendar()
			canvas:
        		Rectangle:
					source: "data/calendar.png"
					pos: self.pos
					size: dp(32), dp(32)
			size: dp(32), dp(32)

	ItemsList:
		id: salah_list
		viewclass: "SalahButton"

