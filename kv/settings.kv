#:kivy 1.11.1

#:import SECONDRY_COLOR constants.SECONDRY_COLOR

<SettingsScreen>:
	settings_list: settings_list
	name: "settings"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		ScreenActionBar:
			text: "Settings"
		CustomRecycleView:
			id: settings_list
			size_hint_y: 0.9
			viewclass: "SettingsButton"
			VerticalListLayout:
				padding: 0

<SettingsButton>:
	background_color: SECONDRY_COLOR

<SettingTextButton>:
	size_hint_y: None
	height: dp(48)
	background_color: SECONDRY_COLOR

<PrayerTimeSettings>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Prayer Times Settings"
				font_size: sp(15)
		ScrollView:
			do_scroll_x: False
			scroll_type: ["content", "bars"]
			bar_color: 0, 0, 0, 1
			BoxLayout:
				orientation: "vertical"
				size_hint_y: None
				height: dp(396)
				spacing: dp(10)
				LabelCheckBox:
					name: "Show Imsak Time"
					active: app.settings["show_imsak_time"]
					on_active: app.settings["show_imsak_time"] = self.active
				SettingTextButton:
					text: "Isha and Fajr Method"
				SettingTextButton:
					text: "Asr Method"
				SettingTextButton:
					text: "High Latitude Method"
				SettingTextButton:
					text: "Jummah Offset"
				SettingTextButton:
					text: "Imsak Offset"
				SettingTextButton:
					text: "Manual Corrections"