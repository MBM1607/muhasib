#:kivy 1.11.1

<Settings>:
	settings_list: settings_list
	name: "settings"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		CustomActionBar:
			NavigationButton:
			Label:
				text: "Settings"
		CustomRecycleView:
			id: settings_list
			size_hint_y: 0.9
			viewclass: "SettingsButton"
			VerticalListLayout:


<SettingsButton>:
	size_hint_y: None
	height: dp(48)

<SettingsPopup>:
	size_hint: 0.8, 0.8
	recycle_view: recycle_view
	CustomRecycleView:
		id: recycle_view
		viewclass: "SettingsPopupButton"
		VerticalListLayout:

<PrayerCalculationPopup>:
	title: "Prayer Calculation Method"
	config_name: "calc_method"

<AsrFactorPopup>:
	title: "Asr Factor"
	config_name: "asr_factor"

<TimeFormatPopup>:
	title: "Time Format"
	config_name: "time_format"
