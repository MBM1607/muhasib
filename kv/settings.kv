#:kivy 1.11.1

#:import SECONDRY_COLOR constants.SECONDRY_COLOR
#:import PRAYER_NAMES constants.PRAYER_NAMES
#:import RECORD_SETTINGS_DATA settings.RECORD_SETTINGS_DATA
#:import TIMES_SETTINGS_DATA settings.TIMES_SETTINGS_DATA
#:import CALENDAR_SETTINGS_DATA settings.CALENDAR_SETTINGS_DATA

<SettingsScreen>:
	settings_list: settings_list
	name: "settings"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		ScreenActionBar:
			text: "Settings"
		CustomRecycleView:
			id: settings_list
			size_hint_y: 0.9
			viewclass: "ListButton"
			VerticalListLayout:
				padding: 0

<ListButton@HorizontalIconTextButton>:
	background_color: SECONDRY_COLOR

<SettingTextButton>:
	size_hint_y: None
	height: dp(48)
	background_color: SECONDRY_COLOR

<SettingPopup>:
	size_hint: 1, 1
	BoxLayout:
		orientation: "vertical"
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
		CustomRecycleView:
			viewclass: "PopupOptionButton"
			data: root.data
			VerticalListLayout:
				padding: 0, dp(5), 0, dp(5)

<PrayerTimeSettings>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Prayer Times Settings"
				font_size: sp(15)
		CustomRecycleView:
			viewclass: "PrayerSettingButton"
			data: TIMES_SETTINGS_DATA
			VerticalListLayout:
				padding: 0

<ManualTimesPopup>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Manual Times Adjustments"
				font_size: sp(15)
		CustomRecycleView:
			viewclass: "SettingPopupButton"
			data: [{"text": text, "name": f"{text.lower()}_adjustment"} for text in PRAYER_NAMES]
			VerticalListLayout:
				padding: 0

<PrayerRecordSettings>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Prayer Record Settings"
				font_size: sp(15)
		CustomRecycleView:
			viewclass: "SettingPopupButton"
			data: RECORD_SETTINGS_DATA
			VerticalListLayout:
				padding: 0

<CalendarSettings>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		CustomActionBar:
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: "Calendar Settings"
				font_size: sp(15)
		CustomRecycleView:
			viewclass: "SettingPopupButton"
			data: CALENDAR_SETTINGS_DATA
			VerticalListLayout:
				padding: 0