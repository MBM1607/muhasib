#:kivy 1.11.1

#:import DATA_OPTIONS graphs_screen.DATA_OPTIONS
#:import GRAPH_OPTIONS graphs_screen.GRAPH_OPTIONS

<PrayerGraphsScreen>:
	name: "record_graphs"
	layout: layout
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)

		ScreenActionBar:
			text: "Prayer Graphs"
		BoxLayout:
			id: layout
			orientation: "vertical"
			spacing: dp(5)
			padding: dp(5)
			BoxLayout:
				orientation: "horizontal"
				spacing: dp(5)
				size_hint_y: None
				height: dp(48)
				CustomSpinner:
					text: DATA_OPTIONS[3]
					values: DATA_OPTIONS
					on_text: root.change_graph_data(self.text)
				CustomSpinner:
					text: GRAPH_OPTIONS[0]
					values: GRAPH_OPTIONS
					on_text: root.change_graph(self.text)
