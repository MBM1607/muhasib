#:kivy 1.11.1

#:import DATA_OPTIONS graphs_screen.DATA_OPTIONS
#:import GRAPH_OPTIONS graphs_screen.GRAPH_OPTIONS

<RecordGraphsScreen>:
	name: "record_graphs"
	layout: layout
	spinner: spinner
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)

		CustomActionBar:
			NavigationButton:
			Label:
				text: "Record Graphs"

		BoxLayout:
			id: layout
			orientation: "vertical"
			spacing: dp(5)
			padding: dp(5)
			BoxLayout:
				orientation: "horizontal"
				spacing: dp(5)
				size_hint_y: None
				height: dp(48)
				CustomSpinner:
					id: spinner
					text: DATA_OPTIONS[3]
					values: DATA_OPTIONS
					on_text: root.change_graph_data(self.text)
				CustomSpinner:
					id: graph_spinner
					text: GRAPH_OPTIONS[0]
					values: GRAPH_OPTIONS
					on_text: root.change_graph(self.text)
