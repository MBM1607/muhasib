#:kivy 1.11.1

<AlignedLabel@Label>:
	text_size: self.size
	halign: "center"
	color: 0.2, 0.2, 0.2, 1

<PrayerTimesScreen>:
	name: "prayer_times"
	times_list: times_list
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	current_time: current_time
	location: location
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		ScreenActionBar:
			text: "Prayer Times"
		BoxLayout:
			orientation: "vertical"
			spacing: dp(2)
			BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.2
				padding: dp(10), dp(2), dp(10), dp(2)
				spacing: dp(2)

				AlignedLabel:
					id: next_prayer
					font_size: sp(15)
				AlignedLabel:
					id: prayer_time_left
					font_size: sp(15)
				BoxLayout:
					orientation: "horizontal"
					AlignedLabel:
						id: current_time
						halign: "left"
					AlignedLabel:
						id: location
						halign: "right"

			CustomRecycleView:
				id: times_list
				viewclass: "PrayerButton"
				VerticalListLayout:
