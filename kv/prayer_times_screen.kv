#:kivy 1.11.1

<LeftAlignLabel@Label>:
	halign: "left"
	color: 0, 0, 0, 1

<PrayerTimesScreen>:
	name: "prayer_times"
	times_list: times_list
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	current_time: current_time
	location: location
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
        CustomActionBar:
			NavigationButton:
            Label:
                text: "Prayer Times"

		BoxLayout:
			orientation: "vertical"
			spacing: dp(2)
			BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.15
				spacing: dp(2)

				LeftAlignLabel:
					id: location
					text: "Location"
				BoxLayout:
					orientation: "horizontal"
					LeftAlignLabel:
						id: current_time
						text: "Current Time"
					LeftAlignLabel:
						id: next_prayer
						text: "Next Prayer"
				LeftAlignLabel:
					id: prayer_time_left
					text: "Time left"

			CustomRecycleView:
				id: times_list
				viewclass: "DoubleTextButton"
				VerticalListLayout: