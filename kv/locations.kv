#:kivy 1.11.1
#:import MAIN_COLOR constants.MAIN_COLOR

<LocationForm>:
	location_text: location_text

	BoxLayout:
		orientation: "horizontal"

		TextInput:
			id: location_text
			multiline: False
			hint_text_color: MAIN_COLOR
			selection_color: (*MAIN_COLOR[:3], 0.5)
			foreground_color: MAIN_COLOR
			pos_hint: {'top': 1}
			size_hint: 1, 0
			height: dp(48)
			hint_text: "City, Region, Country"
			focus: True
			on_text_validate: root.check_input_location()
	BoxLayout:
		orientation: "horizontal"
		LocationButton:
			text: "Submit"
			on_press: root.check_input_location()
			pos_hint: {'bottom': 1}
			size_hint_x: 1

<LocationButton>:
	size_hint_y: None
	height: dp(48)
