#:kivy 1.11.1

#:import MAIN_COLOR constants.MAIN_COLOR
#:import SECONDRY_COLOR constants.SECONDRY_COLOR

<Label>:
	font_name: "data/Saira-Regular.ttf"
	font_size: sp(12)

<Screen>:
	ColorBoxLayout:

<ColorBoxLayout>:
	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			pos: self.pos
			size: self.size

<IconButton>:
	size_hint: None, 1
	source: root.icon
	pos: root.pos
	size: root.size

<HorizontalIconTextButton>:
	orientation: "horizontal"
	size_hint_y: None
	padding: dp(10)
	spacing: dp(2)
	height: dp(48)
	Image:
		source: root.icon
		size_hint: None, None
		size: dp(32), dp(32)
	Label:
		text: root.text
		halign: "left"

<VerticalIconTextButton>:
	orientation: "vertical"
	padding: dp(5)
	Image:
		source: root.icon
	Label:
		text: root.text
		size_hint: 1, None
		size: self.texture_size
		font_size: sp(15)
	
<BaseButton>:
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	canvas.before:
		Color:
			rgba: self.background_color
		BorderImage:
			border: self.border
			pos: self.pos
			size: self.size
			source: self.state_image

<CustomButton>:
	font_size: sp(12)

<CustomSpinner>:
	background_color: SECONDRY_COLOR
	size_hint_y: None
	height: dp(48)

<CustomModalView>:
	background: ""
	ColorBoxLayout:

<CustomActionBar>:
	size_hint_y: None
	padding: dp(10)
	height: dp(48)

<CustomCheckBox@CheckBox>:
	background_checkbox_normal: "data/checkbox_off.png"
	background_checkbox_down: "data/checkbox_on.png"

<CustomPopup>:
	background: ""
	title_color: 0, 0, 0, 1
	title_font: "data/Saira-Regular.ttf"
	title_size: sp(15)
	separator_color: MAIN_COLOR

<LabelCheckBox>:
	spacing: dp(10)
	Label:
		text: root.name

	CustomCheckBox:
		active: root.active
		on_active: root.active = self.active

<DoubleTextButton>:
	spacing: dp(10)
	Label:
		text: root.name
	Label:
		text: root.info

<CustomRecycleView>:
	scroll_type: ["content", "bars"]
	bar_color: 0, 0, 0, 1

<WidgetGrid>:
	RecycleGridLayout:
		cols: root.cols
		default_size: dp(48), dp(48)
		default_size_hint: 1, 1
		spacing: dp(5)
		padding: dp(5)

<HorizontalListLayout@RecycleBoxLayout>:
	orientation: "horizontal"
	default_size: dp(48), dp(48)
	default_size_hint: 1, 1

<VerticalListLayout@RecycleBoxLayout>:
	orientation: "vertical"
	default_size: None, dp(48)
	default_size_hint: 1, None
	size_hint_y: None
	height: self.minimum_height
	spacing: dp(10)
	padding: dp(10)

<NavigationButton>:
	on_press: app.navigationdrawer.toggle_state()
	size: dp(32), dp(32)
	icon: "data/menu.png"

<NavigationWidget>:
	orientation: "vertical"
	spacing: dp(10)
	padding: 0, dp(5), 0, dp(10)
	background_color: MAIN_COLOR
	HorizontalIconTextButton:
		text: "Main Screen"
		icon: "data/back.png"
		on_press: app.open_dashboard()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Prayer Times"
		icon: "data/time.png"
		on_press: app.open_prayer_times()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Prayer Records"
		icon: "data/record.png"
		on_press: app.open_prayer_records()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Record Graphs"
		icon: "data/graph.png"
		on_press: app.open_record_graphs()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Calendar"
		icon: "data/calendar.png"
		on_press: app.open_calendar()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Qibla"
		icon: "data/compass.png"
		on_press: app.open_compass()
		on_release: app.navigationdrawer.toggle_state()
	HorizontalIconTextButton:
		text: "Settings"
		icon: "data/settings.png"
		on_press: app.open_settings()
		on_release: app.navigationdrawer.toggle_state()
	Widget:
