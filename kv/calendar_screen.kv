#:kivy 1.11.1

#:import SECONDRY_COLOR constants.SECONDRY_COLOR
#:import MAIN_COLOR constants.MAIN_COLOR

<BlackLabel@Label>:
	color: 0.2, 0.2, 0.2, 1

<CalendarScreen>:
	name: "calendar"
	dates: dates
	weekdays: weekdays
	month_year_button: month_year_button
	islamic_month_year: islamic_month_year
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)

		ScreenActionBar:
			text: "Calendar"
		BoxLayout:
			orientation: "vertical"
			BlackLabel:
				id: islamic_month_year
				size_hint_y: None
				size: self.texture_size
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: None
				height: dp(48)
				spacing: dp(10)
				padding: dp(5)
				IconButton:
					icon: "data/down.png"
					color: MAIN_COLOR
					on_press: root.previous_month()
				TextButton:
					id: month_year_button
					size_hint_x: 0.7
					on_press: root.open_month_popup()
				IconButton:
					icon: "data/up.png"
					color: MAIN_COLOR
					on_press: root.next_month()
			CustomRecycleView:
				id: weekdays
				size_hint_y: 0.1
				viewclass: "BlackLabel"
				HorizontalListLayout:
			WidgetGrid:
				id: dates
				size_hint_y: 0.8
				cols: 7
				spacing: dp(5)
				padding: dp(5)
				viewclass: "DateButton"

<RecordsPopup>:
	record_lists: record_lists
	title: "Day Records"
	size_hint: 0.9, 0.9
	RecordLists:
		id: record_lists

<YearPopup>:
	year_grid: year_grid
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		CustomActionBar:
			spacing: dp(5)
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			Label:
				text: root.year_range
				font_size: sp(20)
			IconButton:
				icon: "data/up.png"
				on_press: root.next_year_range()
			IconButton:
				icon: "data/down.png"
				on_press: root.previous_year_range()
		WidgetGrid:
			id: year_grid
			viewclass: "YearButton"
			cols: 3

<MonthPopup>:
	month_grid: month_grid
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
		CustomActionBar:
			spacing: dp(5)
			IconButton:
				icon: "data/back.png"
				on_press: root.dismiss()
			TextButton:
				text: root.year
				on_press: root.open_year_popup()
				font_size: sp(20)
			IconButton:
				icon: "data/up.png"
				on_press: root.calendar.next_year()
			IconButton:
				icon: "data/down.png"
				on_press: root.calendar.previous_year()
		WidgetGrid:
			id: month_grid
			viewclass: "MonthButton"
			cols: 3

<YearButton>:
	font_size: sp(15)

<MonthButton>:
	font_size: sp(15)
