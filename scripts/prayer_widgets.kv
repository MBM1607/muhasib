#: import Gradient custom_widgets.Gradient

<SalahLabel>:
	spacing: dp(10)
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			texture: Gradient.vertical(*root.background_colors)

	Label:
		text: root.name

	Label:
		text: root.time

<PrayerOptions>:
	size_hint: 0.5, 0.3
	BoxLayout:
		orientation: "horizontal"
		padding: dp(10)
		PrayerOptionsButton:
			text: "Group"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Alone"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Delayed"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
