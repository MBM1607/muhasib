#: import Gradient custom_widgets.Gradient

<SalahLabel>:
	spacing: dp(10)
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			texture: Gradient.vertical(*root.background_colors)

	Label:
		text: root.name
		font_name: "data/Saira-Regular.ttf"

	Label:
		text: root.time
		font_name: "data/Saira-Regular.ttf"

<PrayerOptions>:
	size_hint: 0.5, 0.5
	title: "Prayer Options"
	BoxLayout:
		orientation: "vertical"
		spacing: dp(5)
		padding: dp(5)
		PrayerOptionsButton:
			text: "Group"
		PrayerOptionsButton:
			text: "Alone"
		PrayerOptionsButton:
			text: "Delayed"
		PrayerOptionsButton:
			text: "Not prayed"

