<SalahLabel>:
	spacing: dp(10)
	background_color: 5/255, 55/255, 11/255, 1
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size

	Label:
		text: root.name

	Label:
		text: root.time

<PrayerOptionsButton>:
	background_image: ""
	background_color: 14/255, 160/255, 31/255, 1

<PrayerOptions>:
	title: "Praying way"
	size_hint: 0.5, 0.3
	BoxLayout:
		orientation: "horizontal"
		PrayerOptionsButton:
			text: "Group"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Alone"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Delayed"
			base: root.base
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
