<LocationForm>:
	city_text: city_text
	country_text: country_text
	size_hint: 0.8, 0.8

	BoxLayout:
		orientation: "horizontal"

		LocationText:
			id: country_text
			hint_text: "Country"
			focus: True
		LocationText:
			id: city_text
			hint_text: "City"
			on_text_validate: root.set_location()
		LocationButton:
			text: "Submit"
			on_press: root.set_location()
			pos_hint: {"top": 1}
			size_hint_x: 0.2

<LocationText@TextInput>:
	multiline: False
	hint_text_color: 5/255, 55/255, 11/255, 1
	selection_color: 5/255, 55/255, 11/255, .5
	foreground_color: 5/255, 55/255, 11/255, 1
	pos_hint: {'top': 1}
	size_hint: 0.4, 0
	height: dp(50)

<LocationButton>:
	size_hint_y: None
	height: dp(50)
