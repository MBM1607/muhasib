#:kivy 1.11.1

<CustomButton>:
	font_name: "data/Saira-Regular.ttf"
	font_size: sp(15)
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size

<CustomLabel>:
	font_name: "data/Saira-Regular.ttf"
	font_size: sp(15)

<DoubleTextButton>:
	spacing: dp(10)
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size

	CustomLabel:
		text: root.name

	CustomLabel:
		text: root.info

<BlackLabel>:
	color: 0, 0, 0, 1

<ItemsList>:
	scroll_type: ["content", "bars"]
	bar_color: 0, 0, 0, 1

	RecycleBoxLayout:
		orientation: "vertical"
		default_size: None, dp(48)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		spacing: dp(10)
		padding: dp(10)

<CustomModalView>:
	background: ""
	BoxLayout:
		canvas.before:
			Color:
				rgba: 240/255, 240/255, 240/255, 1
			Rectangle:
				pos: self.pos
				size: self.size

<CustomPopup>:
	background: ""
	title_color: 0, 0, 0, 1
	title_font: "data/Saira-Regular.ttf"
	title_size: sp(18)
	separator_color: 26/255, 102/255, 38/255, 1
	canvas.before:
		Color:
			rgba: 240/255, 240/255, 240/255, 1
		Rectangle:
			pos: self.pos
			size: self.size
