#: import Gradient custom_widgets.Gradient

<CustomButton>:
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size

<BlackLabel>:
	color: 0, 0, 0, 1

<ItemsList>:
	scroll_type: ["content", "bars"]
	bar_color: 0, 0, 0, 1

	RecycleBoxLayout:
		orientation: "vertical"
		default_size: None, dp(48)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		spacing: dp(10)
		padding: dp(10)

<CustomModalView>:
	background: ""
	BoxLayout:
		canvas.before:
			Color:
				rgba: 240/255, 240/255, 240/255, 1
			Rectangle:
				pos: self.pos
				size: self.size
