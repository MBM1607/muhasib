<CalendarLabel@Label>:
	color: 0, 0, 0, 1

<CalendarButton>:
	background_color: 14/255, 160/255, 31/255, 1
	color: 1, 1, 1, 1

<Empty>:
	canvas.before:
		Color:
			rgba: 153/255, 153/255, 155/255, 0.4
		Rectangle:
			pos: self.pos
			size: self.size

<DatePopup>:
	title: "Prayer record"
	salah_list: salah_list
	size_hint: 0.8, 0.8
	ItemsList:
		id: salah_list
		viewclass: "SalahButton"

<MonthDropDown>:
	CalendarButton:
		text: "January"
		on_release: root.select(1)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "February"
		on_release: root.select(2)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "March"
		on_release: root.select(3)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "April"
		on_release: root.select(4)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "May"
		on_release: root.select(5)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "June"
		on_release: root.select(6)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "July"
		on_release: root.select(7)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "August"
		on_release: root.select(8)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "September"
		on_release: root.select(9)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "October"
		on_release: root.select(10)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "November"
		on_release: root.select(11)
		height: dp(40)
		size_hint_y: None
	CalendarButton:
		text: "December"
		on_release: root.select(12)
		height: dp(40)
		size_hint_y: None

<Calendar>:
	days: days
	dates: dates
	month_menu: month

	BoxLayout:
		orientation: "vertical"

		canvas.before:
			Color:
				rgba: 1, 1, 1, 1
			Rectangle:
				size: self.size
				pos: self.pos
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: 0.1
			spacing: dp(10)
			CalendarButton:
				text: "<"
				on_press: root.previous_month()
				size_hint_x: 0.1
			BoxLayout:
				orientation: "horizontal"
				size_hint_x: 0.4
				CalendarLabel:
					text: root.year_menu
					size_hint_x: 0.8
				BoxLayout:
					orientation: "vertical"
					size_hint_x: 0.2
					CalendarButton:
						text: "+"
						on_press: root.next_year()
					CalendarButton:
						text: "-"
						on_press: root.previous_year()
			CalendarButton:
				id: month
				size_hint_x: 0.4
			CalendarButton:
				text: ">"
				on_press: root.next_month()
				size_hint_x: 0.1
		Days:
			id: days
			size_hint_y: 0.1
		Dates:
			id: dates
			size_hint_y: 0.8

<Days>:
	orientation: "horizontal"
	CalendarLabel:
		text: root.days[0]
	CalendarLabel:
		text: root.days[1]
	CalendarLabel:
		text: root.days[2]
	CalendarLabel:
		text: root.days[3]
	CalendarLabel:
		text: root.days[4]
	CalendarLabel:
		text: root.days[5]
	CalendarLabel:
		text: root.days[6]

<Dates>:
	cols: 7
	spacing: dp(5)
