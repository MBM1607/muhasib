<Calendar>:
	dates: dates
	days: days
	month_menu: month_menu

	BoxLayout:
		orientation: "vertical"

		canvas.before:
			Color:
				rgba: 1, 1, 1, 1
			Rectangle:
				size: self.size
				pos: self.pos
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: 0.1
			spacing: dp(10)
			CustomButton:
				text: "<"
				on_press: root.previous_month()
				size_hint_x: 0.1
			BoxLayout:
				orientation: "horizontal"
				size_hint_x: 0.4
				BlackLabel:
					text: root.year_menu
					font_size: sp(20)
					size_hint_x: 0.8
				BoxLayout:
					orientation: "vertical"
					size_hint_x: 0.2
					spacing: dp(5)
					CustomButton:
						text: "+"
						on_press: root.next_year()
						size_hint_x: 0.8
						pos_hint: {"center_x": 0.5}
					CustomButton:
						text: "-"
						on_press: root.previous_year()
						size_hint_x: 0.8
						pos_hint: {"center_x": 0.5}
			CustomButton:
				id: month_menu
				font_size: sp(20)
				size_hint_x: 0.4
			CustomButton:
				text: ">"
				on_press: root.next_month()
				size_hint_x: 0.1
		Days:
			id: days
			size_hint_y: 0.1
		Dates:
			id: dates
			size_hint_y: 0.7
		BoxLayout:
			padding: 0, dp(5), 0, 0
			orientation: "horizontal"
			size_hint_y: 0.1
			CustomButton:
				text: "To Hijri"
				on_press: root.convert_to_islamic()
			CustomButton:
				text: "To Gregorian"
				on_press: root.convert_to_gregorian()
