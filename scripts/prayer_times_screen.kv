#:kivy 1.11.1

<LeftAlignLabel@BlackLabel>:
	halign: "left"

<PrayerTimesScreen>:
	times_list: times_list
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	location: location
	BoxLayout:
		orientation: "vertical"
		spacing: dp(10)
        BoxLayout:
            size_hint_y: None
            padding: dp(10)
            height: dp(48)
            canvas.before:
                Color:
                    rgba: 26/255, 102/255, 38/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            CustomButton:
				size_hint: None, 1
				on_press: root.dismiss()
				canvas:
					Rectangle:
						source: "data/back.png"
						pos: self.pos
						size: dp(32), dp(32)
				size: dp(32), dp(32)
            CustomLabel:
                text: "Prayer Times"

		BoxLayout:
			orientation: "vertical"
			spacing: dp(2)
			BoxLayout:
				orientation: "vertical"
				size_hint_y: 0.15
				spacing: dp(2)

				LeftAlignLabel:
					id: location
					text: "Location"
				LeftAlignLabel:
					id: next_prayer
					text: "Next Prayer"
				LeftAlignLabel:
					id: prayer_time_left
					text: "Time left"

			ItemsList:
				id: times_list
				viewclass: "DoubleTextButton"