#:kivy 1.11

<DashboardLabel@BlackLabel>:
	halign: "left"

<Dashboard>:
	orientation: "vertical"
	spacing: dp(10)
	times_list: times_list
	salah_list: salah_list
	current_prayer: current_prayer
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	location: location
	qibla_direction: qibla_direction

	canvas.before:
		Color:
			rgba: 240/255, 240/255, 240/255, 1
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		size_hint_y: None
		padding: dp(10)
		spacing: dp(24)
		height: dp(48)
		canvas.before:
			Color:
				rgba: 26/255, 102/255, 38/255, 1
			Rectangle:
				pos: self.pos
				size: self.size
		Widget:
		CustomButton:
			text: "Settings"
			size_hint: None, 1
			size: self.texture_size
			on_press: app.open_settings()
		CustomButton:
			text: "Calendar"
			size_hint: None, 1
			size: self.texture_size
			on_press: app.open_calendar()

	Carousel:
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: .25

				BoxLayout:
					orientation: "vertical"
					padding: dp(10)
					spacing: dp(5)

					DashboardLabel:
						id: current_prayer
						text: "Current Prayer"
					DashboardLabel:
						id: next_prayer
						text: "Next Prayer"
					DashboardLabel:
						id: prayer_time_left
						text: "Time left"
					DashboardLabel:
						id: location
						text: "Location"
				BlackLabel:
					id: qibla_direction
					text: "Qibla Direction"
					font_size: sp(18)

			ItemsList:
				id: salah_list
				viewclass: "SalahButton"
				size_hint_y: .75

		BoxLayout:
			orientation: "vertical"
			BlackLabel:
				size_hint_y: 0.1
				text: "Prayer Times"
				font_size: sp(20)
			ItemsList:
				id: times_list
				viewclass: "DoubleTextButton"
				size_hint_y: 0.9
