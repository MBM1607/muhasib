<DashboardLabel@BlackLabel>:
	font_size: sp(15)
	halign: "left"

<Dashboard>:
	orientation: "vertical"
	times_list: times_list
	salah_list: salah_list
	current_prayer: current_prayer
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	location: location
	qibla_direction: qibla_direction

	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size

	ActionBar:
		background_image: ""
		background_color: 5/255, 55/255, 11/255, 1
		ActionView:
			use_seperator: True
			ActionPrevious:
				title: "Muhasib"
				with_previous: False
			ActionButton:
				text: "Settings"
				on_press: app.open_settings()
			ActionButton:
				text: "Calendar"
				on_press: app.open_calendar()
			ActionButton:
				text: "Set Location"
				on_press: app.location_form.open()

	Carousel:
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: .25

				BoxLayout:
					orientation: "vertical"
					padding: dp(10)
					spacing: dp(5)

					DashboardLabel:
						id: current_prayer
						text: "Current Prayer"
					DashboardLabel:
						id: next_prayer
						text: "Next Prayer"
					DashboardLabel:
						id: prayer_time_left
						text: "Time left"
					DashboardLabel:
						id: location
						text: "Location"
				BlackLabel:
					id: qibla_direction
					text: "Qibla Direction"
					font_size: sp(15)

			ItemsList:
				id: salah_list
				viewclass: "DashboardSalahButton"
				size_hint_y: .75

		ItemsList:
			id: times_list
			viewclass: "SalahLabel"
			size_hint_y: 1
