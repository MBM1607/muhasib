#: import main main

<SalahButton>:
	spacing: dp(10)
	canvas.before:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size

	Label:
		text: root.name

	Label:
		text: root.time


<Dashboard>:
	orientation: "vertical"
	salah_buttons_list: salah_buttons_list

	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size

	ActionBar:
		ActionView:
			use_seperator: True
			ActionPrevious:
				title: "Muhasib"
				with_previous: False
			ActionOverflow:
				ActionButton:
					text: "Settings"
					on_press: app.open_settings()

	BoxLayout:
		orientation: "horizontal"
		size_hint_y: .25

		BoxLayout:
			orientation: "vertical"
			padding: dp(10)
			spacing: dp(5)
			Label:
				text: "Current Prayer"
				font_size: sp(15)
				color: 0, 0, 0, 1
				halign: "left"
			Label:
				text: "Time left"
				font_size: sp(15)
				color: 0, 0, 0, 1
				halign: "left"
			Label:
				text: "Location"
				font_size: sp(15)
				color: 0, 0, 0, 1
				halign: "left"
				

		Label:
			text: "Qibla Direction"
			font_size: sp(15)
			color: 0, 0, 0, 1

	RecycleView:
		id: salah_buttons_list
		viewclass: "SalahButton"
		size_hint_y: .75
		padding: dp(10)
		scroll_type: ["content", "bars"]
		bar_color: 0, 0, 0, 1

		RecycleBoxLayout:
			default_size: None, dp(40)
			default_size_hint: 1, None
			size_hint_y: None
			height: self.minimum_height
			spacing: dp(10)
			padding: dp(10)
			orientation: "vertical"
