#: import main main

<SalahLabel>:
	spacing: dp(10)
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size

	Label:
		text: root.name

	Label:
		text: root.time

<PrayerOptionsButton>:
	background_image: ""
	background_color: 14/255, 160/255, 31/255, 1

<PrayerOptions>:
	background: ""
	separator_color: 86/255, 86/255, 56/255, 1
	title_color: 0, 0, 0, 1
	title_align: "center"
	title: "Praying way"
	size_hint: 0.5, 0.3
	BoxLayout:
		orientation: "horizontal"
		PrayerOptionsButton:
			text: "Group"
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Alone"
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}
		PrayerOptionsButton:
			text: "Delayed"
			size_hint_y: 0.5
			pos_hint: {"center_y": 0.5}

<DashboardLabel@Label>:
	font_size: sp(15)
	color: 0, 0, 0, 1
	halign: "left"

<Dashboard>:
	orientation: "vertical"
	times_list: times_list
	salah_list: salah_list
	current_prayer: current_prayer
	next_prayer: next_prayer
	prayer_time_left: prayer_time_left
	location: location

	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size

	ActionBar:
		background_image: ""
		background_color: 14/255, 160/255, 31/255, 1
		ActionView:
			use_seperator: True
			ActionPrevious:
				title: "Muhasib"
				with_previous: False
			ActionButton:
				text: "Settings"
				on_press: app.open_settings()
			ActionButton:
				text: "Calendar"
				on_press: app.open_calendar()

	Carousel:
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				orientation: "horizontal"
				size_hint_y: .25

				BoxLayout:
					orientation: "vertical"
					padding: dp(10)
					spacing: dp(5)

					DashboardLabel:
						id: current_prayer
						text: "Current Prayer"
					DashboardLabel:
						id: next_prayer
						text: "Next Prayer"
					DashboardLabel:
						id: prayer_time_left
						text: "Time left"
					DashboardLabel:
						id: location
						text: "Location"
				Label:
					text: "Qibla Direction"
					font_size: sp(15)
					color: 0, 0, 0, 1

			RecycleView:
				id: salah_list
				viewclass: "SalahButton"
				size_hint_y: .75
				padding: dp(10)
				scroll_type: ["content", "bars"]
				bar_color: 0, 0, 0, 1

				RecycleBoxLayout:
					default_size: None, dp(40)
					default_size_hint: 1, None
					size_hint_y: None
					height: self.minimum_height
					spacing: dp(10)
					padding: dp(10)
					orientation: "vertical"

		RecycleView:
			id: times_list
			viewclass: "SalahLabel"
			size_hint_y: 1
			padding: dp(10)
			scroll_type: ["content", "bars"]
			bar_color: 0, 0, 0, 1

			RecycleBoxLayout:
				default_size: None, dp(40)
				default_size_hint: 1, None
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(10)
				padding: dp(10)
				orientation: "vertical"
