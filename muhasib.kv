#: import main main

<SalahButton>:
	background_normal: ""
	background_color: 0, 51/255, 19/255, 1


<Dashboard>:
	orientation: "vertical"
	salah_buttons_list: salah_buttons_list

	ActionBar:
		ActionView:
			use_seperator: True
			ActionPrevious:
				title: "Muhasib"
				with_previous: False
			ActionOverflow:
				ActionButton:
					text: "Settings"
					on_press: app.open_settings()

	BoxLayout:
		orientation: "horizontal"
		size_hint_y: 25

		BoxLayout:
			orientation: "vertical"
			padding: dp(20)
			Label:
				text: "Current Prayer"
				text_size: self.size
				halign: "left"
			Label:
				text: "Time left"
				text_size: self.size
				halign: "left"
			Label:
				text_size: self.size
				halign: "left"
				text: "Location"

		Label:
			text: "Qibla Direction"

	RecycleView:
		id: salah_buttons_list
		viewclass: "SalahButton"
		size_hint_y: 75
		padding: dp(5)
		scroll_type: ["content", "bars"]
		data: [{"text": x} for x in ["Fajr", "Sunrise", "Zuhr", "Asr", "Maghrib", "Isha"]]
		RecycleBoxLayout:
			default_size: None, dp(40)
			default_size_hint: 1, None
			size_hint_y: None
			height: self.minimum_height
			spacing: dp(5)
			orientation: "vertical"
