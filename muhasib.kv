#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import args_salah_converter helpers.args_salah_converter

<Dashboard>:
	orientation: "vertical"
	salah_button_list: salah_button_list
	spacing: 20

	ActionBar:
		ActionView:
			use_seperator: True
			ActionPrevious:
				title: "Muhasib"
				with_previous: False
			ActionOverflow:
				ActionButton:
					text: "Settings"
					on_press: app.open_settings()

	BoxLayout:
		orientation: "horizontal"
		size_hint_y: 25

		BoxLayout:
			orientation: "vertical"
			padding: 20
			Label:
				text: "Current Prayer"
				text_size: self.size
				halign: "left"
			Label:
				text: "Time left"
				text_size: self.size
				halign: "left"
			Label:
				text_size: self.size
				halign: "left"
				text: "Location"

		Label:
			text: "Qibla Direction"
